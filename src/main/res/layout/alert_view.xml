<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearlayoutview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:background="@drawable/background_alert_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="Â¡Espera un momento!"
            android:background="@drawable/background_alert_view"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_horizontal"
            android:text="Nuestro Driver solicitara tu documento \nde identidad para poder hacer entrega \nde los productos cuyo consumo es para \n mayores de edad."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>
    
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/backgroundtint_alert_view"
        android:src="@drawable/beer_delivery_logo"
        app:layout_constraintBottom_toTopOf="@+id/linearlayoutview"
        app:layout_constraintTop_toTopOf="@+id/linearlayoutview"
        app:layout_constraintStart_toStartOf="@+id/linearlayoutview"
        app:layout_constraintEnd_toEndOf="@+id/linearlayoutview"
        />
    
    <Button
        android:id="@+id/alertButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Confirmar"
        android:background="@drawable/radius_background"
        android:backgroundTint="@color/primary_color3"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/linearlayoutview"
        app:layout_constraintEnd_toEndOf="@+id/linearlayoutview"
        app:layout_constraintTop_toBottomOf="@+id/linearlayoutview"
        app:layout_constraintBottom_toBottomOf="@+id/linearlayoutview"
        />

</androidx.constraintlayout.widget.ConstraintLayout>