<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    tools:context=".TonaActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="55dp"
        android:src="@drawable/botella_corona"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="345dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/under18_logo" />

    <TextView
        android:id="@+id/texto1"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:text="Corona Extra 12 Oz      Retornable"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/texto3"
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:text="Cerveza en botella de 12 onzas con 4.5 ยบ de alcohol por volumen"
        android:textSize="15dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/texto2"
        android:layout_width="101dp"
        android:layout_height="67dp"
        android:layout_marginLeft="335dp"
        android:layout_marginTop="320dp"
        android:text="C$ 65.00"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <NumberPicker
        android:id="@+id/beer_picker"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="420dp" />

    <Button
        android:id="@+id/add_icon"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="515dp"
        app:icon="@drawable/add_icon"
        app:iconGravity="top"
        app:iconSize="30dp"
        app:iconTint="#000000"
        android:backgroundTint="#4CAF50"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/shoppingButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:clickable="true"
        android:layout_marginTop="700dp"
        android:layout_marginLeft="330dp"
        app:srcCompat="@drawable/shopping_cart" />

</RelativeLayout>